{
  "manifest_version": 3,
  "name": "Eterminal Tab",
  "version": "1.0",
  "description": "Make new tab like terminal and add your custom commands and more",
  "author": "Emad Adel",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "bookmarks",
    "activeTab",
    "scripting"
  ],
  "commands": {
    "open-search-box": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Open search box in current tab"
    }
  },
  "background": {
    "service_worker": "assets/js/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/js/search-box.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "32": "assets/icons/icon.png",
    "48": "assets/icons/icon.png",
    "96": "assets/icons/icon.png",
    "128": "assets/icons/icon.png"
  }
}
